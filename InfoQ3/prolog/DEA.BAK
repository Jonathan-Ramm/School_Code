% Übergangsfunktion: delta(Zustand, Symbol, NeuerZustand)
delta(q0, a, q1).
delta(q0, b, q0).
delta(q1, a, q0).
delta(q1, b, q1).

start(q0).
final(q0).



lambda(Q, [], Q).
lambda(Q, [Symbol | Rest], Qf) :-
    delta(Q, Symbol, Q1),
    lambda(Q1, Rest, Qf).

% accept(Wort): akzeptiert, wenn Verarbeitung im Endzustand endet
accept(Wort) :-
    start(Q0),
    lambda(Q0, Wort, Qf),
    final(Qf).

